<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PointEMaterialX" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/White</item>
        <item name="colorPrimaryDark">@color/Black</item>
        <!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorOnPrimary">@color/Black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Yellow_400</item>
        <!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
        <item name="colorOnSecondary">@color/Black</item>
        <!-- Status bar color. -->

        <item name="android:buttonStyle">@style/MatButtonStyle</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/White</item>

    </style>

    <style name="MatButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/Black</item>
        <item name="backgroundTint">@color/Yellow_400</item>
        <item name="strokeColor">@color/Yellow_400</item>
        <item name="elevation">4dp</item>
        <item name="rippleColor">@color/White</item>
    </style>
</resources>